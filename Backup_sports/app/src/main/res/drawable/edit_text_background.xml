<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="#FF5722"/> <!-- Border color and width -->
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5"/> <!-- Background color when pressed -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke
                android:width="2dp"
                android:color="#FF5722"/> <!-- Border color and width -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Default background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC"/> <!-- Border color and width -->
        </shape>
    </item>
</selector>
